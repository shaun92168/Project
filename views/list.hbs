<!DOCTYPE html>
<html>
	<head>
		<meta charset='utf-8'>
		<title>Lists</title>
		<link href='list_style.css' rel='stylesheet' type='text/css'/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>

	<body>

		{{> navbar}}

		<div id="menu">
            <select id='chooseCategory' placeholder='Enter a category'>
            	<option>Select a category</option>
            	{{#each list.categories as |category|}}
            	<option>{{category.name}}</option>
            	{{/each}}
            </select>
            <button id='newItem'>New Item</button>
            <button id='delCategory'>Delete Category</button>
		</div>

		<div id='categories'>
			<h2>{{list.name}}</h2>
			<button id='newCategory'>New Category</button>
			{{#each list.categories as |category|}}
				<ul id='{{category.name}}'><hr /><h4>{{category.name}}</h4>
				{{#each category.items as |item|}}
					<li class='item' id='{{item}}'>{{item}}<button class='deleteItem' onclick="delItem('{{category.name}}', '{{item}}')">x</button></li>
				{{/each}}
				</ul>
			{{/each}}
		</div>
        
		<script src='list_js.js'></script>
		<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	</body>
	{{navbar}}
</html>