<!DOCTYPE html>
<html>
	<head>
		<meta charset='utf-8'>
		<title>Lists</title>
		<link href='list_style.css' rel='stylesheet' type='text/css'/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>

	<body>

		{{> navbar}}

		<div id="menu">
            
            <input id='chooseCategory' placeholder='Enter a category'/>
            <button id='delCategory'>Delete Category</button>
			<input id='chooseItem' placeholder='Enter an item' />
            <button id='newItem'>New Item</button>
			<button id='delItem'>Delete Item</button>
		</div>

		<div id='categories'>
			<h2>{{list.name}}</h2>
			<button id='newCategory'>New Category</button>
			{{#each list.categories as |category|}}
            	<hr />
					<ul id='{{category.name}}'><h4>{{category.name}}</h4>
					{{#each category.items as |item|}}
						<li id='{{item}}'>{{item}}</li>
					{{/each}}
					</ul>
			{{/each}}
		</div>
        
		<script src='list_js.js'></script>
		<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	</body>
	{{navbar}}
</html>